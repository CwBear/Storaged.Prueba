@model List<Storaged.Models.ViewModels.ListProductoViewModel>
@using Storaged.Models.ViewModels;
@{
    ViewBag.Title = "Registros de Juegos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Producto/Registro" class="btn btn-primary">Agregar Juego</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio</th>
            </tr>
            @foreach(var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Cantidad</td>
                    <td>@oElemento.Precio</td>
                    <td>
                        <a class="btn btn-default" href="~/Producto/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Producto/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

